<div class="article-meta">
	<%- partial('title') %>
	<time class="article-date" datetime="<%= date_xml(post.date) %>" itemprop="datePublished">
	<%= date(post.date, null) %>
	</time>
	<% if (post.categories && post.categories.length){ %>
		<div class="article-category">
			<%- list_categories(post.categories, {
				show_count: false,
				class: 'article-category',
				style: 'none',
				separator: '>'
			})%>
		</div>
	<% } %>
</div>